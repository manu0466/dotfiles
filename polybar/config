[colors]
background = ${xrdb:color0:#222}
background-alt 	= ${xrdb:color7:#222}
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color4:#222}
alert = ${xrdb:color7:#222}
icon = ${xrdb:color4:#222}

[bar/top]
monitor = ${env:MONITOR:}
width = 100%
height = 2.3%
fixed-center = true
underline-size = 2
topbar.border-top-size = 4
background = ${colors.background}
foreground = ${colors.foreground}
padding-left = 2
padding-right = 2
module-margin-left = 0
module-margin-right = 2
dpi = ${env:DPI:}
font-0 = "Noto Sans:size=10;3"
font-1 = unifont:fontformat=truetype:size=10:antialias=false;3
font-2 = Roboto:style=Regular:size=10;3
font-3 = "FontAwesome:style=Regular:size=12;5"
font-4 = "Material Icons:style=Regular:size=15;10"
modules-left = i3 xwindow
modules-center = date
modules-right = backlight cpu memory eth wifi battery powermenu
tray-position = right
tray-background = ${colors.background}
tray-padding = 0
tray-maxsize = 1000
tray-scale = 1
tray-transparent = false

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
label-mode-padding = 1
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.background}

label-focused = %name%
label-focused-background = ${colors.secondary}
label-focused-foreground = ${colors.foreground}
label-focused-underline = ${colors.secondary}
label-focused-padding = 2

label-unfocused = %name%
label-unfocused-padding = 2
label-unfocused-foreground = ${colors.foreground-alt}

label-visible = %name%
label-visible-background = ${colors.background}
label-visible-underline = ${colors.background}
label-visible-padding = 2

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-foreground = ${colors.foreground}
label-urgent-padding = 2

[module/xwindow]
type = internal/xwindow
label = %title:0:40:...%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix =  
format-prefix-foreground = ${colors.icon}
;format-underline = #fff
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix =  
format-prefix-foreground = ${colors.icon}
label = %gb_used%/%gb_free%

[module/backlight]
type = internal/xbacklight
output = ${env:MONITOR:}
enable-scroll = false
format = <label>
label = %{F#299DC4}%{F-} %percentage%%

[module/eth]
type = internal/network
interface = enp0s20f0u2u4
interval = 3.0
format-connected-underline = #55aa55
format-connected-prefix = ""
format-connected-prefix-foreground = ${colors.icon}
label-connected = %downspeed:9% %local_ip%

[module/wifi]
type = internal/network
interface = wlp2s0
interval = 3.0
format-connected-underline = #55aa55
format-connected-prefix =  
format-connected-prefix-foreground = ${colors.icon}
label-connected = %essid% %downspeed:9% %local_ip%

[module/date]
type = internal/date
interval = 1
format-prefix-foreground = ${colors.secondary}
date = %a %d %b %Y
time = %H:%M
label = "%date% %time%"

[module/battery]
time-format = %H:%M
type = internal/battery
battery = BAT0
adapter = ADP1
bar-capacity-foreground = #FFF
bar-capacity-width = 10
bar-capacity-empty = 
bar-capacity-fill = 
bar-capacity-indicator = BAT

format-charging = <label-charging>
format-discharging = <label-discharging>
format-full = <label-full>

label-charging = %{F#299DC4} %{F-}%percentage%% %time% %consumption% W
label-discharging = %{F#299DC4} %{F-}%percentage%% %time% %consumption% W

[module/powermenu]
type = custom/menu
expand-right = true
format-spacing = 1
label-open = 
label-open-foreground = ${colors.icon}
label-close =  Cancel
label-close-foreground = ${colors.icon}
label-separator = |
label-separator-foreground = ${colors.secondary}

menu-0-0 =  Reboot
menu-0-0-exec = reboot
menu-0-1 =  Suspend
menu-0-1-exec = systemctl suspend
menu-0-2 =  Power off
menu-0-2-exec = poweroff

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 0
margin-bottom = 0

